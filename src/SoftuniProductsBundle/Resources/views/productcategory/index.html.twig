{% extends 'base.html.twig' %}
{% block body %}
    <h1>Categories list</h1>

    <div class="col-md-4">
        <p class="lead">Top rating !</p>
        <div class="list-group">
            {% for productCategory in productCategories %}
                <a href="{{ path('admin_product-category_show', { 'id': productCategory.id }) }}" class="list-group-item">
                    <img style="width: 130px" src="{{ asset('uploads/product-category/' ~ productCategory.image) }}">
                <span style="font-size: 2rem;margin-left: 30px;font-weight: bold";>{{ productCategory.title }}</span>
                </a>
            {% endfor %}
        </div>
    </div>
    
    <ul>
        <li>
            <a href="{{ path('admin_product-category_new') }}">Create a new productCategory</a>
        </li>
    </ul>
{% endblock %}
